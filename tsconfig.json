{
  "compilerOptions": {
    "target": "ESNext", // Using ESNext for the latest JavaScript features
    "module": "commonjs", // Ensure CommonJS for Node.js compatibility
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node", // Node.js module resolution
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./src/**/*.ts",
    "node_modules/.prisma/client"
  ],
  "exclude": [
    "node_modules"
  ]
}
